# =====================================================
# DOCKFM RETAIL - ENVIRONMENT VARIABLES
# Copy this to .env.local and fill in your values
# =====================================================

# =====================================================
# DATABASE
# =====================================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/dockfm_retail?schema=public"

# =====================================================
# SERVER
# =====================================================
PORT=5001
NODE_ENV=development
API_PREFIX=api/v1

# =====================================================
# JWT & AUTH
# =====================================================
JWT_SECRET=dockfm-retail-super-secret-change-in-production-to-something-very-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =====================================================
# STREAMING & AUDIO
# =====================================================
STREAM_SECRET="your-stream-secret-for-token-signing"
# Target loudness in LUFS (EBU R128)
TARGET_LUFS=-14
# Default crossfade duration in ms
CROSSFADE_DURATION=3000

# =====================================================
# AI & VOICE GENERATION
# =====================================================
ELEVENLABS_API_KEY=your-elevenlabs-api-key
OPENAI_API_KEY=your-openai-api-key

# =====================================================
# MUSIC CATALOG PROVIDERS (Royalty-Free)
# =====================================================
# Jamendo - Creative Commons music
# Get key at: https://developer.jamendo.com/
JAMENDO_API_KEY=

# Pixabay Music - Free commercial use
# Get key at: https://pixabay.com/api/docs/
PIXABAY_API_KEY=

# =====================================================
# CLOUD STORAGE (for audio files)
# =====================================================
AWS_S3_BUCKET=dockfm-retail-storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1

# Or Google Cloud Storage
# GCS_BUCKET=dockfm-retail-storage
# GCS_PROJECT_ID=your-project-id
# GCS_KEY_FILE=./gcs-credentials.json

# =====================================================
# CORS
# =====================================================
CORS_ORIGIN=http://localhost:5000,http://localhost:5173

# =====================================================
# RATE LIMITING
# =====================================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# =====================================================
# REDIS (Optional - for caching & sessions)
# =====================================================
REDIS_URL=redis://localhost:6379

# =====================================================
# PAYMENTS (Stripe - for billing)
# =====================================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# =====================================================
# ERROR TRACKING (Sentry)
# =====================================================
SENTRY_DSN=
